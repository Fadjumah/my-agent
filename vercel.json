{
  "rewrites": [
    { "source": "/api/ai",     "destination": "/api/ai.js" },
    { "source": "/api/github", "destination": "/api/github.js" },
    { "source": "/(.*)",       "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache" }
      ]
    }
  ]
}
